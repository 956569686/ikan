<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/v4_apt_tertiary_margin_left"
        android:layout_marginStart="@dimen/v4_apt_tertiary_margin_left" />

    <TextView
        android:id="@+id/primary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/v4_apt_tertiary_margin_left"
        android:layout_marginStart="@dimen/v4_apt_tertiary_margin_left"
        android:layout_toEndOf="@id/left_icon"
        android:layout_toRightOf="@id/left_icon"
        android:gravity="center" />

    <TextView
        android:id="@+id/secondary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/v4_apt_tertiary_margin_right"
        android:layout_marginRight="@dimen/v4_apt_tertiary_margin_right"
        android:layout_toLeftOf="@+id/right_icon"
        android:layout_toStartOf="@+id/right_icon"
        android:gravity="center" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/v4_apt_tertiary_margin_right"
        android:layout_marginRight="@dimen/v4_apt_tertiary_margin_right" />

</RelativeLayout>