<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lce_icon_margin_top" />

    <TextView
        android:id="@+id/des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lce_des_margin_top"
        android:text="@string/lce_empty_des"
        android:textColor="@color/lce_des_text_color"
        android:textSize="@dimen/lce_des_text_size" />

    <TextView
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/lce_action_height"
        android:layout_marginTop="@dimen/lce_action_margin_top"
        android:background="@drawable/lce_action_bg_selector"
        android:gravity="center"
        android:paddingLeft="@dimen/lce_action_padding_left"
        android:paddingRight="@dimen/lce_action_padding_right"
        android:visibility="gone" />

</LinearLayout>
